{
  "name": "theblock",
  "version": "0.3.28",
  "author": "xavieryvez@users.noreply.github.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/theblock/theblock.github.io.git"
  },
  "scripts": {
    "check": "npm run clean:local && npm run install:modules && npm-run-all --serial check:*",
    "check:csslint": "stylelint ./src/**/*.scss ./packages/**/src/**/*.scss",
    "check:jslint": "eslint ./i18n/**/*.js ./src/**/*.js ./packages/**/i18n/**/*.js ./packages/**/src/**/*.js",
    "check:jstype": "flow check",
    "clean": "npm-run-all --parallel clean:*",
    "clean:local": "rimraf ./node_modules/@theblock || true",
    "clean:logs": "rimraf *-error.log || true",
    "delete:modules": "rimraf ./node_modules || true",
    "install:modules": "npm install --ignore-scripts --progress=false",
    "start": "npm run install:modules && NODE_ENV=development webpack-dev-server --progress",
    "stats": "npm-run-all --serial stats:*",
    "stats:coverage": "NOD_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test": "NOD_ENV=test jest",
    "watch": "npm-run-all --parallel watch:*",
    "watch:jsflow": "flow-watch --ignore node_modules/ --watch .flowconfig",
    "ci:build": "npm-run-all --serial ci:build:*",
    "ci:build:all": "NODE_ENV=production webpack"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "empty": "^0.10.1",
    "empty-string": "^1.1.1",
    "eslint": "^4.2.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.49.1",
    "flow-watch": "^1.1.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "lerna": "^2.0.0",
    "markdown-loader": "^2.0.1",
    "npm-run-all": "^4.0.2",
    "postcss-calc": "^6.0.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-for": "^2.1.1",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-mixins": "^6.0.1",
    "postcss-nested": "^2.0.2",
    "postcss-scss": "^1.0.2",
    "postcss-simple-vars": "^4.0.0",
    "postcss-strip-inline-comments": "^0.1.5",
    "rimraf": "^2.6.1",
    "script-ext-html-webpack-plugin": "^1.8.3",
    "style-loader": "^0.18.2",
    "stylelint": "^7.13.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-scss": "^1.5.1",
    "webpack": "^3.2.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.5.1",
    "worker-loader": "^0.8.1"
  },
  "dependencies": {
    "@theblock/lib-api": "file:packages/lib-api",
    "@theblock/lib-ens": "file:packages/lib-ens",
    "@theblock/lib-hardware": "file:packages/lib-hardware",
    "@theblock/lib-services": "file:packages/lib-services",
    "@theblock/lib-ui": "file:packages/lib-ui",
    "@theblock/lib-util": "file:packages/lib-util",
    "@theblock/meta-contracts": "file:packages/meta-contracts",
    "@theblock/page-404": "file:packages/page-404",
    "@theblock/page-blog": "file:packages/page-blog",
    "@theblock/page-home": "file:packages/page-home",
    "@theblock/page-settings": "file:packages/page-settings",
    "@theblock/page-wallet": "file:packages/page-wallet",
    "babel-runtime": "^6.23.0",
    "lodash.flatten": "^4.4.0",
    "lodash.uniq": "^4.5.0",
    "normalize.css": "^7.0.0"
  }
}
