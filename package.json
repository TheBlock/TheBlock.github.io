{
  "name": "theblock",
  "version": "0.4.1",
  "author": "xavieryvez@users.noreply.github.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/theblock/theblock.github.io.git"
  },
  "scripts": {
    "check": "npm run clean:local && npm run install:modules && npm-run-all --serial check:*",
    "check:csslint": "stylelint ./src/**/*.scss ./packages/**/src/**/*.scss",
    "check:jslint": "eslint ./i18n/**/*.js ./src/**/*.js ./packages/**/i18n/**/*.js ./packages/**/src/**/*.js",
    "check:jstype": "flow check",
    "clean": "npm-run-all --parallel clean:*",
    "clean:local": "rimraf ./node_modules/@theblock || true",
    "clean:logs": "rimraf *-error.log || true",
    "delete:modules": "rimraf ./node_modules || true",
    "install:modules": "npm install --ignore-scripts --progress=false",
    "start": "npm run install:modules && NODE_ENV=development webpack-dev-server --progress",
    "stats": "npm-run-all --serial stats:*",
    "stats:coverage": "NOD_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test": "NODE_ENV=test jest",
    "watch": "npm-run-all --parallel watch:*",
    "watch:build": "webpack --watch",
    "watch:jsflow": "flow-watch --ignore node_modules/ --watch .flowconfig",
    "ci:build": "npm-run-all --serial ci:build:*",
    "ci:build:all": "NODE_ENV=production webpack"
  },
  "devDependencies": {
    "babel-cli": "~6.24.0",
    "babel-core": "~6.25.0",
    "babel-eslint": "~8.0.0",
    "babel-jest": "~21.2.0",
    "babel-loader": "~7.1.0",
    "babel-plugin-transform-decorators-legacy": "~1.3.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-es2015": "~6.24.0",
    "babel-preset-es2016": "~6.24.0",
    "babel-preset-es2017": "~6.24.0",
    "babel-preset-flow": "~6.23.0",
    "babel-preset-react": "~6.24.0",
    "babel-preset-stage-0": "~6.24.0",
    "coveralls": "~3.0.0",
    "css-loader": "~0.28.0",
    "empty": "~0.10.0",
    "empty-string": "~1.1.0",
    "eslint": "~4.10.0",
    "eslint-config-semistandard": "~11.0.0",
    "eslint-config-standard": "~10.2.1",
    "eslint-plugin-import": "~2.8.0",
    "eslint-plugin-node": "~5.2.0",
    "eslint-plugin-promise": "~3.6.0",
    "eslint-plugin-react": "~7.4.0",
    "eslint-plugin-standard": "~3.0.0",
    "extract-text-webpack-plugin": "~3.0.0",
    "flow-bin": "~0.58.0",
    "flow-watch": "~1.1.0",
    "html-loader": "~0.5.0",
    "html-webpack-harddisk-plugin": "~0.1.0",
    "html-webpack-plugin": "~2.30.0",
    "jest": "~21.2.0",
    "json-loader": "~0.5.0",
    "lerna": "~2.5.0",
    "markdown-loader": "~2.0.0",
    "npm-run-all": "~4.1.0",
    "postcss-calc": "~6.0.0",
    "postcss-discard-comments": "~2.0.0",
    "postcss-for": "~2.1.0",
    "postcss-import": "~11.0.0",
    "postcss-loader": "~2.0.0",
    "postcss-mixins": "~6.2.0",
    "postcss-nested": "~2.1.0",
    "postcss-scss": "~1.0.0",
    "postcss-simple-vars": "~4.1.0",
    "postcss-strip-inline-comments": "~0.1.0",
    "rimraf": "~2.6.0",
    "script-ext-html-webpack-plugin": "~1.8.0",
    "style-loader": "~0.19.0",
    "stylelint": "~8.2.0",
    "stylelint-config-standard": "~17.0.0",
    "stylelint-scss": "~2.1.0",
    "webpack": "~3.8.0",
    "webpack-bundle-analyzer": "~2.9.0",
    "webpack-dev-server": "~2.9.0",
    "worker-loader": "~1.1.0"
  },
  "dependencies": {
    "@theblock/lib-api": "file:packages/lib-api",
    "@theblock/lib-ens": "file:packages/lib-ens",
    "@theblock/lib-hardware": "file:packages/lib-hardware",
    "@theblock/lib-services": "file:packages/lib-services",
    "@theblock/lib-ui": "file:packages/lib-ui",
    "@theblock/lib-util": "file:packages/lib-util",
    "@theblock/meta-contracts": "file:packages/meta-contracts",
    "@theblock/page-404": "file:packages/page-404",
    "@theblock/page-index": "file:packages/page-index",
    "babel-runtime": "~6.26.0",
    "lodash.flatten": "~4.4.0",
    "lodash.uniq": "~4.5.0",
    "normalize.css": "~7.0.0"
  }
}
